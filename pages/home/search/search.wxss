/* pages/home/search/search.wxss */
page{  
  background: #f5f5f5;  
}

.search {
  width: 100%;
  height: 30px;
  display: flex;
  align-items: flex-end;
  background-color: #fff;
}

.searchbox {
  width: 80%;
  height: 24px;
  margin-left: 10%;
  background-color: #EDEBE8;
  border-bottom-left-radius: 12px;
  border-top-left-radius: 12px;
  border-bottom-right-radius: 12px;
  border-top-right-radius: 12px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search-box-add {
  font-size: 25rpx;
  margin-left: 10px;
  margin-right: 5px;
  color: #605E5C;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
  border-top: 6px solid #000;
  margin-left: 5px;
}

.search-box-splid {
  margin-left: 5px;
  color: #CECAC6;
}

.search-icon {
  width: 10px;
  height: 10px;
  margin-left: 5px;
}

.search-placeholder {
  color: #CECAC6;
  font-size: 25rpx;
  margin-left: 5px;
}

.order-condition {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  color: #605E5C;
  border-bottom:1px solid #d9d9d9;
  background-color: #fff;
}

.order-condition-item {
  display: flex;
  align-items: center;
}

.order-condition-item-title {
  margin-right: 5px;
}

.room-list {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.room-list-left {
  width: 25%;
}

.room-list-left-item {
  color: #000;
  font-size: 28rpx;
  border-bottom: 1px solid #d9d9d9;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.room-lis-right {
  width: 100%;
  background-color: #fff;
}

.tjfy-box {
  width: 100%;
  height: 100%;
  flex: 1;
}

.tjfy-box-fy {
  margin-left: 5%;
  width: 90%;
  margin-top: 10px;
  height: 200px;
  display:inline-block;
}

.tjfy-box-fy-image {
  width: 100%;
  height: 150px;
}

.tjfy-box-fy-fypf {
  width: 100%;
  height: 15px;
  font-size: 20rpx;
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  color: #000;
}

.tjfy-box-fy-fymc {
  font-size: 30rpx;
}
.calendar {
  background-color: #ffffff;
  width: 100%;
}

.calendar-cancel {
  display: flex;
  width: 100%;
  height: 40px;
  padding-left: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid #d9d9d9;
  font-size: 30rpx;
  align-items: center;
}
.condition-box {
  top: 0px;
  width: 100%;
  height: 80px;
  background-color: #fff;
}