/* components/minu/minu.wxss */
/*主容器*/
.stepper {
	width: 80px;
	height: 25px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
	/*给主容器设一个边框*/
	border: 1px solid #ccc;
	border-radius: 3px;
}
/*加号和减号*/
.stepper view {
	width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/*数值*/
.stepper input {
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
  text-align: center;
}
/*普通样式*/
.stepper .normal{
	color: black;
}
/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}